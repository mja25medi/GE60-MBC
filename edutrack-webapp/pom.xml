	<repositories>
		<repository>
			<id>localRepo</id>
			<name>local Repositories</name>
			<url>file://D:/EDUTRACK_GE60/MavenRepository</url>
		</repository>
		<repository>
			<id>mediopia</id>
			<name>Mediopia Repositories</name>
